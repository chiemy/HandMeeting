<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/listview_item"
     >
    	<ImageView
	        android:id="@+id/price"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:src="@drawable/free" />
	    <ImageView
	        android:id="@+id/image"
	        android:layout_width="110dp"
	        android:layout_height="60dp"
	        android:layout_margin="10dp"
	        android:scaleType="fitXY"
	        android:src="@drawable/long_baseimg" />
	
	    <TextView
	        android:id="@+id/meetingTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/meetingName"
	        android:layout_below="@+id/meetingName"
	        android:layout_marginTop="5dp"
	        android:textColor="@color/white"
	        android:text="时间"
	        android:textSize="11sp" />
	
	    <TextView
	        android:id="@+id/meetingName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/image"
	        android:layout_toRightOf="@+id/image"
	        android:singleLine="true"
	        android:ellipsize ="end"
	        android:ems="8"
	        android:textColor="@color/white"
	        android:textSize="17sp" />
	
	    <TextView
	        android:id="@+id/status"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/image"
	        android:layout_alignLeft="@+id/meetingTime"
	        android:text="TextView"
	        android:textSize="11sp" />

</RelativeLayout>
